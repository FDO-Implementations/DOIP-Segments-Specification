{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "targetId": {
      "type": "string"
    },
    "operationId": {
      "type": "string"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "anyOf": [
          {
            "element": {
              "type": "string"
            }
          },
          {
            "includeElementData": {
              "type": "string"
            }
          }
        ]
      },
      "additionalProperties": false
    },
    "authentication": {
      "type": "object",
      "properties": {
        "anyOf": [
          {
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          },
          {
            "token": {
              "type": "string"
            }
          },
          {
            "key": {
              "type": "string"
            }
          }
        ]
      },
      "additionalProperties": false
    }
  },
  "required": [
    "targetId",
    "operationId"
  ],
  "additionalProperties": false
}
